<% stylesheet_link_tag "devise_style" %>
<div class="container main-container align-middle bg-light align-self-center">
  <h2> Forgot your password? </h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field form-group ">
      <%= f.label :email %><br />
      <%= f.email_field :email,class: 'form-control form-control-lg', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions",class: "actions btn btn-primary" %>
    </div>

  <% end %>
  <%= render "devise/shared/links" %>
</div>
