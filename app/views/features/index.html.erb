<div class="container main-container align-middle bg-light align-self-center">
  <p id="notice"><%= notice %></p>
  <h1> Features </h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> Feature name </th>
        <th scope="col"> Feature code </th>
        <th scope="col"> Feature unit price </th>
        <th scope="col"> Feature max unit limit </th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @features.each do |feature| %>
        <tr>
          <td><%= feature.feature_name %></td>
          <td><%= feature.feature_code %></td>
          <td><%= feature.feature_unit_price %></td>
          <td><%= feature.feature_max_unit_limit %></td>
          <td><%= link_to 'Show', [@plan, feature] %></td>
          <td><%= link_to 'Destroy',[@plan, feature], remote: true, method: :delete, data: { confirm: 'Are you sure?' } if policy(Feature).destroy? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Back', plans_path, class: "actions btn btn-primary" %>
  <%= link_to 'New Feature', new_plan_feature_path if policy(Feature).new? %>
</div>
